<div class="row">
{{#if username}}    
        <div class="col-lg-12 col-md-12 col-sm-12">
            <form action="/update" method="post" enctype="application/x-www-form-urlencoded">
                <div class="profile-info">
                    <h4>Registrar usuario</h4>
                    <hr>
                        <div class="row form-row">
                            <div class="col-lg-5 col-md-5 col-sm-5">
                                <div class="text-container">
                                    <div class="span-container">
                                        <span>Nombre:<span>
                                    </div>
                                    <div class="input-container-x disabled-input">
                                        <input type="text" name="name" id="" class="input-obj name" placeholder="Nombre">
                                    </div>
                                </div>                
                            </div>    
                            <div class="col-lg-7 col-md-7 col-sm-7">
                                <div class="text-container">
                                    <div class="span-container">
                                        <span>Apellidos:<span>
                                    </div>
                                    <div class="input-container-x disabled-input">
                                        <input type="text" name="lastname" id=""  class="input-obj a-pat" placeholder="Apellidos">
                                    </div>
                                </div>                
                            </div>    
                    </div>

                    <div class="row form-row">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="text-container">
                                    <div class="span-container">
                                        <span>Usuario:<span>
                                    </div>
                                    <div class="input-container-x disabled-input">
                                        <input type="text" name="username" id="" class="input-obj username" placeholder="Usuario Interno">
                                    </div>
                            </div>       
                        </div>            
                    </div>
                    <div class="row form-row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="text-container">
                                    <div class="span-container">
                                        <span>Contraseña:<span>
                                    </div>
                                    <div class="input-container-x disabled-input">
                                        <input type="password" name="pwd" id="" class="input-obj password" placeholder="Contraseña">
                                    </div>
                            </div>       
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="text-container">
                                    <div class="span-container">
                                        <span>Confirmar:<span>
                                    </div>
                                    <div class="input-container-x disabled-input">
                                        <input type="password" name="pwdconfirm" id="" class="input-obj c-password" placeholder="Confirmar">
                                    </div>
                            </div>       
                        </div>
                    </div>


                    <div class="row form-row">
                        <div class="col-lg-8 col-md-8 col-sm-8">
                            
                            <div class="text-container">
                                    <div class="span-container">
                                        <span>Perfil:<span>
                                    </div>
                                    <div class="input-container-x disabled-input">
                                        <select name="user_type" id="" class="input-obj u-type">
                                            <option></option>                                
                                        </select>            
                                    </div>
                                </div>      
                            </div>        
                        <div class="col-lg-4 col-md-4 col-sm-4">
                            <div class="text-container">
                                    <div class="span-container">
                                        <span>Activo:<span>
                                    </div>
                                    <div class="input-container-x u-active disabled-input">
                                        <input name ="active" type="checkbox" name="" id="">
                                    </div>
                                </div>      
                            </div>
                        </div>
                        <div class="row form-row">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <button class="b-actions b-save">Guardar</button>
                            <button class="b-actions b-cancel">Cancelar</button>
                        </div>
                    </div>
                    </div>    
                </div>
            </form>
        </div>
    
    {{/if}}
</div>