
<h3>Listado de usuarios</h3>
<hr>
<table class="table table-hover">
    <thead>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Usuario</th>
        <th>Perfil</th>
        <th>Eliminar</th>
        <th>Editar</th>
    </thead>
    <tbody id="body-users">        
        {{#if items}}
            {{#each items}}
            <tr>
                <td>{{nombre}}</td>    
                <td>{{amaterno}}</td>
                <td>{{usrinterno}}</td>
                <td>{{tipousuario}}</td>
                <td class='item-d-td'><a class='item-d-a' href="#">Eliminar</a></td>
                <td class='item-e-td'><a class='item-e-a' href="#">Editar</a></td>
            </tr>
            {{/each}}
        {{/if}}
    </tbody>
</table>


<div id="dialog-edit" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Editar usuario</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">     
        <div class="profile-info">    
            {{#if username}}    
            <div class="col-lg-12 col-md-12 col-sm-12">
                <form action="/users/add" method="post" enctype="application/x-www-form-urlencoded">                
                        <div class="row form-row">
                            <div class="col-lg-5 col-md-5 col-sm-5">
                                <div class="text-container">
                                    <div class="span-container">
                                        <span>Nombre:<span>
                                    </div>
                                    <div class="input-container-x disabled-input">
                                        <input type="text" name="name" id="name" class="input-obj name" placeholder="Nombre">
                                    </div>
                                </div>                
                            </div>    
                            <div class="col-lg-7 col-md-7 col-sm-7">
                                <div class="text-container">
                                    <div class="span-container">
                                        <span>Apellidos:<span>
                                    </div>
                                    <div class="input-container-x disabled-input">
                                        <input type="text" name="lastname" id="lastname"  class="input-obj a-pat" placeholder="Apellidos">
                                    </div>
                                </div>                
                            </div>    
                    </div>

                    <div class="row form-row">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="text-container">
                                    <div class="span-container">
                                        <span>Usuario:<span>
                                    </div>
                                    <div class="input-container-x disabled-input">
                                        <input type="text" name="username" id="username" class="input-obj username" placeholder="Usuario Interno">
                                    </div>
                            </div>       
                        </div>            
                    </div>
                    <div class="row form-row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="text-container">
                                    <div class="span-container">
                                        <span>Contrase침a:<span>
                                    </div>
                                    <div class="input-container-x disabled-input">
                                        <input type="password" name="pwd" id="pwd" class="input-obj password" placeholder="Contrase침a">
                                    </div>
                            </div>       
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="text-container">
                                    <div class="span-container">
                                        <span>Confirmar:<span>
                                    </div>
                                    <div class="input-container-x disabled-input">
                                        <input type="password" name="pwdconfirm" id="pwdconfirm" class="input-obj c-password" placeholder="Confirmar">
                                    </div>
                            </div>       
                        </div>
                    </div>


                    <div class="row form-row">
                        <div class="col-lg-8 col-md-8 col-sm-8">
                            
                            <div class="text-container">
                                    <div class="span-container">
                                        <span>Perfil:<span>
                                    </div>
                                    <div class="input-container-x disabled-input">
                                        <select name="user_type" id="usertype" class="input-obj u-type">
                                            <option value="ADM">Administraci칩n</option>                                
                                            <option value="OPR">Operaci칩n</option>                                
                                            <option value="RPT">Reportes</option>                                
                                            <option value="VNT">Ventas</option>                                
                                        </select>            
                                    </div>
                                </div>      
                            </div>        
                        <div class="col-lg-4 col-md-4 col-sm-4">
                            <div class="text-container">
                                    <div class="span-container">
                                        <span>Activo:<span>
                                    </div>
                                    <div class="input-container-x u-active disabled-input">
                                        <input name ="active" type="checkbox" name="" id="">
                                    </div>
                                </div>      
                            </div>
                        </div>                        
                    </div>                    
             </form>
        </div>     
        </div>     
        {{/if}} 
      </div>
      <div class="modal-footer">
        <button type="button" id="save-changes" class="btn btn-primary item-s-changes">Guardar</button>
        <button type="button" id="cancel-save" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="/public/js/users.js"></script>