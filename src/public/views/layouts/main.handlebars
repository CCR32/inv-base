<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/public/css/bootstrap.css">
    <link rel="stylesheet" href="/public/css/app/main.css">    
    
</head>
<body>       
        {{#if AppName }} 
                {{{body}}}            
            {{else}} 
            <div class="nav-header">
                <div class="header-title">
                    <div class="title-app">
                        <div class="menu-icon">
                            <img src="/public/img/hamburger.png" alt="" class="img-menu">
                        </div>
                        <span class="sp-title">@AppName</span>                            
                    </div>                    
                </div>
                <div class="header-search">
                    <input type="text" class="text-search" id="search-text" placeholder="Buscar">
                    <div class="img-search">

                    </div>
                </div>
                <div class="user-interation">
                    <div class="user-info">
                        {{#if username}}
                                <span>{{username.usrinterno}}</span>
                       {{else}}
                                <span>##username.- options</span>
                        {{/if}}
                    </div>           
                    <div class="user-profile">      
                        <img src="/public/img/coyote.jpg" alt=""  >                  
                    </div>
                    <div class="user-settings">
                        <img src="/public/img/settings.png" class="img-settings" alt=""  >                  
                    </div>
                             
                </div>
            </div>

            <div class="container-settings closed-settings">
                <div class="menu-item">
                    <span class="item">Perfil</span>                        
                        <div class="container-image">
                            <img src="/public/img/down.png" class="image-item">
                        </div>                                            
                 </div>                                     

                 <div class="menu-item">
                    <span class="item">Apariencia</span>                        
                        <div class="container-image">
                            <img src="/public/img/down.png" class="image-item">
                        </div>                                            
                 </div>             

                 <div class="menu-item">
                    <span class="item">Cerrar sesion</span>                        
                        <div class="container-image">
                            <img src="/public/img/down.png" class="image-item">
                        </div>                                            
                 </div>                                                                
            </div>
            
            <div class="container-menu closed-menu">            
            </div>            


            <div class="wrapper-search search-hidden">   
                <div class="search-header">
                    <div class="menu-path">
                        <span class="menu-url">Ubicacion actual: @@url</span>
                    </div>
                    <div class="close-finder">
                        <img class="close-x-finder" src="/public/img/close.png" alt="">
                    </div>
                </div>                   
            </div>                        
            <div class="wrapper"> 
                {{{body}}}
            </div>
            
        {{/if}}
    
    <script type="text/javascript" src="/public/js/jquery.js"></script>
    <script type="text/javascript" src="/public/js/popper.js"></script>
    <script type="text/javascript" src="/public/js/bootstrap.js"></script>
    <script type="text/javascript" src="/public/js/app.js"></script>
    
    
</body>
</html>