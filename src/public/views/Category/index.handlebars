<table class="table table-hover">
    <thead>
        <th>Categoria</th>
        <th>Nombre</th>
        <th>Nombre Largo</th>
        <th>Estatus</th>
        <th>Eliminar</th>
        <th>Editar</th>
    </thead>
    <tbody>        
        {{#if items}}
            {{#each items}}
            <tr>
                <td>{{code}}</td>    
                <td>{{nombreCategoria}}</td>
                <td>{{descripcionCategoria}}</td>
                <td>{{descripcionLarga}}</td>
                <td><a href="#">Eliminar</a></td>
                <td><a href="#">Editar</a></td>
            </tr>
            {{/each}}
        {{/if}}
    </tbody>
</table>
