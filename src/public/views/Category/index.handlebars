
<h3 class="f-title">>Listado de categorias</h3>
<table class="table table-hover">
    <thead>
        <th>Categoria</th>
        <th>Nombre</th>
        <th>Nombre Largo</th>
        <th>Estatus</th>
        <th>Eliminar</th>
        <th>Editar</th>
    </thead>
    <tbody id="body-category">        
        {{#if items}}
            {{#each items}}
            <tr>
                <td>{{code}}</td>    
                <td>{{nombreCategoria}}</td>
                <td>{{descripcionCategoria}}</td>
                <td>{{descripcionLarga}}</td>
                <td class='item-d-td'><a class='item-d-a' href="#">Eliminar</a></td>
                <td class='item-e-td'><a class='item-e-a' href="#">Editar</a></td>
            </tr>
            {{/each}}
        {{/if}}
    </tbody>
</table>

<div id="dialog-edit" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">     
          <div class="form">
                <div class="row form-row">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="text-container">
                            <div class="span-container">
                                <span>Categoria:<span>
                            </div>
                            <div class="input-container-x">
                                <input type="text" name="cat-id" id="cat-id" class="input-obj" placeholder="Descripcion">
                            </div>
                        </div>                
                    </div>                    
                </div>          
            <div class="row form-row">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="text-container">
                            <div class="span-container">
                                <span>Nombre:<span>
                            </div>
                            <div class="input-container-x">
                                <input type="text" name="cat-name" id="cat-name" class="input-obj" placeholder="Descripcion">
                            </div>
                        </div>                
                    </div>                    
                </div>          
            <div class="row form-row">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="text-container">
                            <div class="span-container">
                                <span>Descripci√≥n:<span>
                            </div>
                            <div class="input-container-x">
                                <input type="text" name="cat-description" id="cat-description" class="input-obj" placeholder="Descripcion">
                            </div>
                        </div>                
                    </div>                    
                </div>      
                <div class="row form-row">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="text-container">
                            <div class="span-container">
                                <span>Des Larga:<span>
                            </div>
                            <div class="input-container-x">
                                <input type="text" name="cat-des-large" id="cat-des-large" class="input-obj" placeholder="Descripcion">
                            </div>
                        </div>                
                    </div>                    
                </div>                        
          </div>          
      </div>
      <div class="modal-footer">
        <button type="button" id="save-changes" class="btn btn-primary item-s-changes">Guardar</button>
        <button type="button" id="cancel-save" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
      </div>
    </div>
  </div>
</div>


<script type="text/javascript" src="/public/js/app-category.js"></script>